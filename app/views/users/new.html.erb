<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4 box">
        <h1 class="title">Sign Up</h1>

        <%= form_with model: @user do |f|%>
          
          <div class="field">
            <div class="control">
               <%= f.label :name, class: "label"%>
               <%= f.text_field :name, autofocus: true, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :username, class: "label"%>
              <%= f.text_field :username, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :email, class: "label"%>
              <%= f.text_field :email, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, class: "button is-pulled-right"%>
            </div>
          </div>


        <% end %>
      </div>
    </div>
  </div>
</div>