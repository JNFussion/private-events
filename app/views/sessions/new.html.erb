<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4 box">
        <h1 class="title">Log in</h1>

        <%= form_with url: sessions_path do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :username, class: "label"%>
              <%= f.text_field :username, class: "input", autofocus: true%>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>