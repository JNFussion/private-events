<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6 box">
        <h2 class="title">Create new event</h2>
        <%= form_with model: @event do |f| %>
          <div class="field">
            <%= f.label :title, class: "label" %>
            <div class="control">
              <%= f.text_field :title, class: "input", autofocus: true %>
            </div>
          </div>
          
          
          <div class="field">
            <%= f.label :description, class: "label"%>
            <div class="control">
              <%= f.text_area :description, class: "textarea", placeholder: "Explain your event."%>
            </div>
          </div>

          <div class="field">
            <%= f.label :event_date, class: "label"%>
            
            <div class="control has-text-weight-bold is-flex is-align-items-center">
              <div class="select mr-2 is-small"><%= f.datetime_select :event_date, {date_separator: "</div>-<div class='select mx-2 is-small'>",datetime_separator: "</div> at <div class='select mx-2 is-small'>" ,time_separator: "</div>:<div class='select ml-2 is-small'>"} %></div>
            </div>
            
          </div>

          <div class="field">
            <%= f.label :location, class: "label"%>
            <div class="select is-small">
              <%= f.country_select :location%>
            </div>
          </div>

          <div class="field is-grouped">
            <p class="control">
              <%= f.submit class: "button is-primary"%>
            </p>
            <p class="control">
              <%= link_to 'Cancel', root_path, class: "button is-dark"%>
            </p>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
